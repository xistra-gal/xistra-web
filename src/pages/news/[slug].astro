---
import Layout from "../../layouts/Layout.astro";
import fetchNews from "../../scripts/fetchNews";
import { remark } from 'remark';
import html from 'remark-html';

const { slug } = Astro.params;
const allNews = await fetchNews();
const newsItem = allNews.find(item => item.slug === slug);

if (!newsItem) throw new Error(`No se encontr√≥ la noticia para slug: ${slug}`);

// Convertir Markdown a HTML
const processed = await remark().use(html).process(newsItem.content);
const contentHtml = processed.toString();
---

<Layout>
  <article class="my-5 max-w-4xl mx-auto">
    <h1 class="text-center text-4xl font-bold uppercase mb-4">{newsItem.title}</h1>
    <h3 class="indent-2 my-6 text-2xl">{newsItem.topic}</h3>
    <div class="indent-2 markdown-content" set:html={contentHtml}></div>
  </article>
</Layout>

<style>
  .markdown-content {
    line-height: 1.7;
  }
  
  .markdown-content :global(p) {
    margin-bottom: 1.5rem !important;
    text-align: justify;
  }
  
  .markdown-content :global(h2) {
    font-size: 1.875rem; /* text-3xl */
    font-weight: 700; /* font-bold */
    margin-top: 2rem !important;
    margin-bottom: 1rem !important;
    color: #1f2937; /* text-gray-800 */
  }
  
  .markdown-content :global(h3) {
    font-size: 1.5rem; /* text-2xl */
    font-weight: 600; /* font-semibold */
    margin-top: 1.5rem !important;
    margin-bottom: 0.75rem !important;
    color: #374151; /* text-gray-700 */
  }
  
  .markdown-content :global(h4) {
    font-size: 1.25rem; /* text-xl */
    font-weight: 600;
    margin-top: 1rem !important;
    margin-bottom: 0.5rem !important;
  }
  
  .markdown-content :global(ul), 
  .markdown-content :global(ol) {
    margin-bottom: 1.5rem !important;
    padding-left: 1.5rem;
  }
  
  .markdown-content :global(li) {
    margin-bottom: 0.5rem;
  }
</style>